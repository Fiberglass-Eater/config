# wm independent hotkeys
#
# terminal emulator
super + Return
	xst

# program launcher
super + F1
	dmenu_run -i -l 17

# File manager
super + f
	xst -e lf
 
# Web browser
super + shift + f
	ff -P

# Open a nvim buffer. I write everything in vim and copy/paste to wherever it needs to go. 
super + shift + t 
	xst -e nvim /tmp/buffer

# Open up vimwiki to view notes and the like
super + shift + n 
	xst -e nvim ~/index.md

# Open up my vimwiki daily todo list
super + shift + m
	xst -e nvim ~/usr/todo.md
# Pulsemixer
super + control + p
	xst -e pulsemixer	

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Screen locking
F11
	slock
#
# Shutdown
super + F11 + F12
	doas shutdown -r now

# Take a screenshot of a selection
Print
	maim -s -l -c 0.3,0,0.5,0.3 png && notify-send "Screenshot taken!"
 
# Take a screenshot of a selection, upload to 0x0.st and copy url to clipboard
shift + Print
	maim -s -l -c 0.3,0,0.5,0.3 | curl -F "file=@-" 0x0.st | xclip -selection clipboard 

# Pair my airpods 
super + F8
	bluetoothctl power on && bluetoothctl connect 4C:6B:E8:17:6C:58

# Increase volume
alt + u
	pactl set-sink-volume 0 +5%

# Lower volume
alt + l
	pactl set-sink-volume 0 -5%

# Mute volume
alt + m
	pactl set-sink-mute 0 toggle
# Open a wikipedia page with zathura
super + alt + w
	wiki

# Raise the brightness of laptop screens
XF86MonBrightnessUp
	xbacklight -inc 10

# Increase the brightness of laptop screens
XF86MonBrightnessDown
	xbacklight -dec 10

# Control dwm via dwmc 

# Change the foucused window on the current tag
super + {k,j}
	dwmc focusstack {-,+}1

super + shift + {k,j}
	dwmc movestack {-,+}1

# Move the current window left or right
super + {h,l}
	dwmc setmfact {-,+}0.05

# Toggle the titlebar
super + b
	dwmc togglebar

# Toggle floating
super + shift + p
	dwmc togglefloating

# Kill the current window
super + w
	dwmc killclient

 
super + shift + {q,r}
	dwmc quit {0,1}

super + Tab
	dwmc view

# Set the layout
super + {t,f,m}
	dwmc setlayoutex {0,1,2}

super + {_,ctrl +}{_,shift +} {1-9}
	dwmc {_,toggle}{viewex,tagex} {0-8}

# View all windows
super + 0
	dwmc viewall
